{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "dev": "nodemon",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "cli": "node --loader ts-node/esm ./src/main.cli.ts",
    "cli:version": "npm run cli -- --version",
    "cli:import": "npm run cli -- --import ./mocks/offers.tsv",
    "cli:generate": "npm run cli -- --generate 300 ./mocks/offers.tsv http://localhost:3000/",
    "cli:help": "npm run cli -- --help",
    "json-server": "json-server --watch ./mocks/mock-server-data.json"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@types/express": "^5.0.2",
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^1.0.0-beta.3",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.0.0",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^22.0.0",
    "npm": ">=10"
  },
  "dependencies": {
    "@typegoose/typegoose": "^12.16.0",
    "chalk": "^5.4.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "got": "^14.4.7",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.2",
    "mongoose": "^8.15.1",
    "pino": "^9.7.0",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.8.1"
  }
}
